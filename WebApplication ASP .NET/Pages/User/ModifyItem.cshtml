@page
@model ModifyItemModel
@{
    ViewData["Title"] = "Modify Quantity";
}

<div class="container mx-auto px-4 py-8 max-w-2xl">
    <h1 class="text-2xl font-bold mb-6 text-gray-800">Modify Quantity</h1>

    @if (Model.CartItem != null)
    {
        <div class="bg-white shadow-sm rounded-lg overflow-hidden border border-gray-200">
            <div class="p-4 sm:p-6 flex items-center">
                <div class="flex-shrink-0 h-16 w-16 sm:h-20 sm:w-20 mr-4">
                    <img class="h-full w-full rounded-lg object-cover"
                         src="@Model.CartItem.image"
                         alt="@Model.CartItem.ProductName"
                         onerror="this.src='/images/placeholder-product.png'">
                </div>
                <div class="flex-grow">
                    <h2 class="text-lg sm:text-xl font-semibold text-gray-900">@Model.CartItem.ProductName</h2>
                    <p class="text-sm text-gray-600">Current quantity: @Model.CartItem.Quantity</p>
                    <p class="text-sm font-medium text-gray-800">Price: @Model.CartItem.Price.ToString("C")</p>
                </div>
            </div>

            <form method="post" class="p-4 sm:p-6 border-t border-gray-200 bg-gray-50">
                <input type="hidden" asp-for="CartItem.ProductID" />
                <div class="mb-4">
                    <label for="newQuantity" class="block text-sm font-medium text-gray-700 mb-1">New Quantity</label>
                    <div class="flex items-center">
                        <input type="number"
                               id="newQuantity"
                               asp-for="NewQuantity"
                               min="1"
                               max="100"
                               class="block w-24 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                               required>
                        <span class="ml-2 text-sm text-gray-500">
                            
                        </span>
                    </div>
                    <span asp-validation-for="NewQuantity" class="text-red-500 text-xs mt-1"></span>
                </div>
                <div class="flex justify-between items-center mt-6">
                    <a asp-page="/User/Cart" class="text-sm text-gray-600 hover:text-gray-800 underline">
                        &larr; Back to Cart
                    </a>
                    <button type="submit"
                            class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-150 ease-in-out text-sm">
                        Update Quantity
                    </button>
                </div>
            </form>
        </div>
    }
    else
    {
        <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded-md" role="alert">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm text-yellow-700">
                        The requested item was not found in your cart.
                    </p>
                </div>
            </div>
        </div>
        <div class="mt-4">
            <a asp-page="/User/Cart" class="text-blue-600 hover:text-blue-800 underline text-sm">
                &larr; Return to Cart
            </a>
        </div>
    }
</div>